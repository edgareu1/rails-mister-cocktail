document.getElementById("doses-list").innerHTML = "<%= j render partial: "doses-list" %>";

document.querySelector('#ModalNewDose button').click();     // Close Modal
document.getElementById('dose_description').value = '';     // Empty the description field

// Get the list the of options
var ingredientOptions = document.querySelectorAll('#dose_ingredient_id option');

// Select the default ingredient 'Ice'
for (let i = 0; i < ingredientOptions.length; i++) {
  if (ingredientOptions[i].selected == 'selected') {
    ingredientOptions[i].selected = '';
  } else if (ingredientOptions[i].value == <%= Ingredient.all.find_by(name: "Ice").id %>) {
    ingredientOptions[i].selected = 'selected';
  }
}
