<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col" style="min-width: 500px; margin: 20px">
      <h1>Create a new Dose</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-gradient" %>
      <% end %>

      <%= link_to 'Back', cocktail_path(@cocktail), class: "btn btn-gradient", style: "margin-top: 10px" %>
    </div>
  </div>
</div>
