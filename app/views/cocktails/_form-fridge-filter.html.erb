<%= form_tag cocktails_path, method: 'get', id: "filter" do %>
  <%= check_box_tag(:only_this) %>
  <%= label_tag(:only_this, "Only this ingredients") %>
  <%= select_tag 'ingredients[]', options_for_select(@ingredients.collect(&:name)), multiple: true, size: 8 %>
  <%= submit_tag "Filter", name: nil %>
<% end %>
