<div class="row justify-content-center">
  <div class="container-page">
    <div class="container-page-headers">
      <h1><%= @cocktail.name %></h1>

      <%= link_to cocktails_path do %>
        <i class="fas fa-undo-alt"></i>
      <% end %>
    </div>

    <div style="display: flex">
      <!-- Cocktail Image -->
      <div style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 380, width: 380, crop: :fill %>'); min-height: 380px; min-width: 380px; padding: 0"></div>

      <!-- Form for Review Creation -->
      <div class="container-general" style="margin-left: 20px; width: 290">
        <h3>Add Review</h3>

        <%= simple_form_for [@cocktail, @review] do |f| %>
          <div class="stars">
            <%= f.collection_radio_buttons :rating, [[5], [4], [3], [2], [1]], :first, :last, item_wrapper_tag: false, boolean_style: :inline do |b| %>
              <%= b.radio_button + b.label {''} %>
            <% end %>
          </div>

          <%= f.input :content %>
          <%= f.button :submit, class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>

    <div style="margin: 20px 0; display: flex">
      <ul class="container-general" style="min-width: 400px">
        <h3>Recipe</h3>

        <!-- Display the ingredients -->
        <% if @cocktail.doses.length == 0 %>
          <p style="margin-left: 10px">No recipe for it yet...</p>
        <% else %>
          <% @cocktail.doses.each do |dose| %>
            <li style="list-style: none; display: flex; align-items: center; margin: 10px 0 0 10px">
              <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="fas fa-trash-alt" style="margin-right: 5px; font-size: 16px; color: black"></i>
              <% end %>
              <p style="font-size: 18px; margin: 0"><%= "#{dose.ingredient.name}: #{dose.description}" %></p>
            </li>
          <% end %>
        <% end %>
      </ul>

      <div class="container-general" style="min-width: 250px">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.button :submit, class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>

    <ul class="container-general" style="margin: 0 0 10px 0; min-width: 270px">
      <h3>Reviews</h3>

      <!-- Display the reviews -->
      <% if @cocktail.reviews.length == 0 %>
        <p style="margin-left: 10px">Be the first to leave a review!</p>
      <% else %>
        <% @cocktail.reviews.reverse[0..4].each do |review| %>
          <li style="list-style: none; align-items: center; margin: 10px 0 0 10px">
            <p style="font-size: 18px; margin: 0">
              <%= ("★" * review.rating) + ("☆" * (5 - review.rating)) %>
              <span style="font-size: 12px"><%= " #{review.created_at.strftime("%Y-%m-%d")}" %></span>
            </p>
            <p style="margin-left: 16px"><%= review.content %></p>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
