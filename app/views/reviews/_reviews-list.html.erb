<div style="display: flex">
  <h3>Reviews</h3>
  <%= link_to "New Review", data: { toggle: "modal", target: "#ModalNewReview" }, class: "white-icon" do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<!-- Display the last 5 reviews -->
<% if @cocktail.reviews.length == 0 %>
  <p style="margin-left: 10px">No reviews...</p>
<% else %>
  <% @cocktail.reviews.last(5).reverse.each do |review| %>
    <li style="list-style: none; align-items: center; margin: 10px 0 0 10px">
      <p data-rating=<%= review.rating %> style="font-size: 14px; margin: 0">
        <span style="font-size: 13px; margin-left: 2px"><%= time_ago_in_words(review.created_at) %></span>
      </p>

      <p class="read-more" style="margin-left: 15px; font-size: 15px; text-align: justify"><%= review.content %></p>
    </li>
  <% end %>
<% end %>
