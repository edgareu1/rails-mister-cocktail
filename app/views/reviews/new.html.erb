<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col" style="min-width: 500px">
      <h1>Create a new Review</h1>

      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.button :submit, class: "btn btn-gradient" %>
      <% end %>

      <%= link_to 'Back', cocktail_path(@cocktail), class: "btn btn-gradient", style: "margin-top: 10px" %>
    </div>
  </div>
</div>
